{% extends 'layout/main.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('plugins/json-viewer/json-viewer.min.css') }}">
{% endblock %}
{% block content %}
    {% apply spaceless %}
        <div class="row">
            <div class="{% if is_auditable(data) and can_view_audit() %}col-lg-6{% else %}col-lg-12{% endif %} col-md-12 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h4>{{ page_title | trans({}, 'pages') }}</h4>
                    </div>
                    <div class="card-body p-1">
                        <ul class="list-group">
                            {% for property in properties %}
                                {% if property.name not in ["id"] %}
                                    {% if 'node' == property.name %}
                                        {% set node = attribute(data, property.name) %}
                                        <li class="list-group-item">
                                            {{ ('sas.table.column.' ~ context ~ '.' ~ property.name) | trans({}, 'tables') }}
                                            <a class="float-right">{{ node.name ~ ' [' ~ node.code ~ ']' }}</a>
                                        </li>
                                    {% else %}
                                        <li class="list-group-item">
                                            {{ ('sas.table.column.' ~ context ~ '.' ~ property.name) | trans({}, 'tables') }}
                                            <a class="float-right">{{ semart_print(attribute(data, property.name)) }}</a>
                                        </li>
                                    {% endif %}
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('KejawenLab\\Application\\Admin\\Controller\\Endpoint\\Main', {nodeId: data.node.id}) }}" class="btn btn-outline-secondary">{{ 'sas.form.action.back' | trans({}, 'forms') }}</a>
                    </div>
                </div>
            </div>
            {% if is_auditable(data) and can_view_audit() %}
            <div class="col-lg-6 col-md-12 col-sm-12">
                <div class="card">
                    <div class="card-header p-2">
                        <h4>{{ 'sas.page.audit.last_changes' | trans({}, 'pages') }}</h4>
                    </div>
                    <div class="card-body p-0">
                        {% for key, data in audits %}
                            <ul class="list-group p-1">
                                {% for property in data | keys %}
                                    <li class="list-group-item text-primary">
                                        {{ ('sas.table.column.audit.' ~ property) | trans({}, 'tables') }}
                                        {% if 'data' == property %}
                                            <a class="float-right"><pre class="json-viewer" data-json="{{ data[property] | json_encode() }}"></pre></a>
                                        {% else %}
                                            <a class="float-right">{{ data[property] }}</a>
                                        {% endif %}
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endfor %}
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('KejawenLab\\Application\\Admin\\Controller\\Endpoint\\Audit', {id: data.id, nodeId: data.node.id}) }}" class="btn btn-outline-info">{{ 'sas.form.action.audit' | trans({}, 'forms') }}</a>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
    {% endapply %}
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('plugins/json-viewer/json-viewer.min.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('.json-viewer').each(function() {
                let me = $(this);
                me.jsonViewer(me.data('json'), {collapsed: true, withQuotes: true, withLinks: false});
            });
        });
    </script>
{% endblock %}
